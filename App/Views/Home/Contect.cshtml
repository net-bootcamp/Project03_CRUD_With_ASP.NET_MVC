@{
    ViewData["Title"] = "Contect";
}

@Html.Partial("_LayoutPartial")


<h1>Contact Us</h1>

<div class="container">
    <form action="/Home/index/">
        <label for="fname" style=" font-family: 'Comic Sans MS'; ">First Name</label>
        <input type="text" id="fname" name="firstname" placeholder="Your name..">
        <br />

        <label for="lname" style=" font-family: 'Comic Sans MS'; ">Last Name</label>
        <input type="text" id="lname" name="lastname" placeholder="Your last name..">
        <br />
        <label for="country" style=" font-family: 'Comic Sans MS'; ">Country</label>
        <select id="country" name="country">
            <option value="Saudi">Saudi Arabia</option>
            <option value="Kuwait">Kuwait</option>
            <option value="UAE">United Arab Emirates</option>
        </select>
        <br />

        <label for="subject" style=" font-family: 'Comic Sans MS'; ">Subject</label>
        <br />
        <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px"></textarea>
        <a href="/Home/index/"> <button class="btn btn-info">Submit </button>  </a>
    </form>
</div>